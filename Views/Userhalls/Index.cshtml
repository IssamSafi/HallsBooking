@model IEnumerable<Firstproject.Models.Userhall>

@{
    ViewData["Title"] = "Index";
            Layout="~/views/shared/_Admin.cshtml";

}

@*<h2>Index</h2>*@

<p>
    <a asp-action="Create" class="btn btn-danger">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hall)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.IsApprove)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hall.HallName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Fname)
            </td>
            <td>
                @if (item.IsApprove==true)
                    {
                        <text>Approved</text>
                    }
                    else if (item.IsApprove==false)
                    {
                     <text>Rejected</text>   
                    }else
                    {
                        <text> waiting </text>
                    }

            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-info">Delete</a>
                @{
                    if (item.IsApprove==null)
                        {
                       <text>|</text>  <a asp-action="ApproveUserHall"  asp-route-id="@item.Id" class="btn btn-primary">Approve</a> <text>|</text>
                         <a asp-action="RejectUserHall" asp-route-id="@item.Id" class="btn btn-danger">Reject</a> 
                        }
                }

            </td>
        </tr>
}
    </tbody>
</table>
