@model IEnumerable<Hall>
@{
    Layout="~/views/shared/_Home.cshtml";
}
<head>

     <style>
        .centered {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
       }
       .h1{
           background-color:MediumSeaGreen;
       }

    </style>
</head>






<div class="hero">
       
      <div class="hero-slide">

        <div
          class="img overlay"
           style="background-image: url(@Url.Content("~/Image/"+@ViewBag.Home))"
          >
      </div> 




        <div
          class="img overlay"
            style="background-image: url(@Url.Content("~/Image/"+@ViewBag.HomeImage))"                 
        ></div>
        <div
          class="img overlay"
           style="background-image: url(@Url.Content("~/Image/"+@ViewBag.HomeImage2))"       
        ></div>
      </div>
     
     
                  <div class="centered" ><h1>  @ViewBag.HomeT </h1> </div>
                   
    </div>




    <div class="section">
      <div class="container">
        <div class="row mb-5 align-items-center">
          <div class="col-lg-6">
            <h2 class="font-weight-bold text-primary heading">
              The Halls
            </h2>
          </div>
          <div class="col-lg-6 text-lg-end">
            <p>
              <a
                asp-controller="Home" asp-action="HallsV"
                target="_blank"
                class="btn btn-primary text-white py-3 px-4"
                >View all Halls</a>
             
            </p>
          </div>
        </div>
       
        <div class="row">
          <div class="col-12">
            <div class="property-slider-wrap">
              <div class="property-slider">
               @foreach (var item in Model)
              {
                  
                 <div class="property-item">
                  <a href="property-single.html" class="img">
                    <img src="~/image/@item.Imagepath" alt="Image"  class="img-fluid" width="100%" />
                  </a>

                  <div class="property-content">
                    <div class="price mb-2"><span>$@item.HallPrice</span></div>
                    <div>
                        

                        <span class="d-block mb-2 text-black-50"
                        >@item.HallName</span
                      >
                      <span class="d-block mb-2 text-black-50"
                        >@item.HallType</span
                      >
                      <span class="city d-block mb-3">@item.Address.City</span>

                      

                      <a
                        asp-controller="Home" asp-action="Booking"
                        class="btn btn-primary py-2 px-3"
                        >Book Now</a
                      >
                    </div>
                  </div>
                </div> 
               
              }
    
               </div>



                

              

              <div
                id="property-nav"
                class="controls"
                tabindex="0"
                aria-label="Carousel Navigation"
              >
                <span
                  class="prev"
                  data-controls="prev"
                  aria-controls="property"
                  tabindex="-1"
                  >Prev</span
                >
                <span
                  class="next"
                  data-controls="next"
                  aria-controls="property"
                  tabindex="-1"
                  >Next</span
                >
              </div>
            </div>
          </div>
        </div>
      </div>
    
    </div>

