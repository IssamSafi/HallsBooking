@model Firstproject.Models.Hall

@{
    ViewData["Title"] = "Edit";
        Layout="~/views/shared/_Admin.cshtml";

}

@*<h2>Edit</h2>

<h4>Hall</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="HallId" />
            <div class="form-group">
                <label asp-for="HallName" class="control-label"></label>
                <input asp-for="HallName" class="form-control" />
                <span asp-validation-for="HallName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HallPrice" class="control-label"></label>
                <input asp-for="HallPrice" class="form-control" />
                <span asp-validation-for="HallPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HallSize" class="control-label"></label>
                <input asp-for="HallSize" class="form-control" />
                <span asp-validation-for="HallSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HallType" class="control-label"></label>
                <input asp-for="HallType" class="form-control" />
                <span asp-validation-for="HallType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddressId" class="control-label"></label>
                <select asp-for="AddressId" class="form-control" asp-items="ViewBag.AddressId"></select>
                <span asp-validation-for="AddressId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-info">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
