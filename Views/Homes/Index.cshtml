@model IEnumerable<Firstproject.Models.Home>

@{
    ViewData["Title"] = "Index";
        Layout="~/views/shared/_Admin.cshtml";

}

<h2>@*Index*@</h2>

<p>
    <a asp-action="Create" class="btn btn-danger">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
           <img src=@Url.Content("~/Image/"+ item.Image1) asp-append-version="true" height="100" width="100" alt="Alternate Text" />

            </td>
            <td>
          <img src=@Url.Content("~/Image/"+ item.Image2) asp-append-version="true" height="100" width="100" alt="Alternate Text" />

            </td>
            <td>
      <img src=@Url.Content("~/Image/"+ item.Image3) asp-append-version="true" height="100" width="100" alt="Alternate Text" />

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info"> Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-info">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
